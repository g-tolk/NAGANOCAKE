<div class="container">
  <div class="row">
    <div class="top-message col-md-offset-3 col-md-6">
    <h2>会員の方はこちらからログイン</h2><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-xs-3"><%= f.label :メールアドレス %></div>
        <div class="col-xs-1"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div><br>

      <div class="row">
        <div class="col-xs-3"><%= f.label :パスワード%></div>
        <div class="col-xs-1"><%= f.password_field :password, autocomplete: "current-password" %></div>
      </div><br>

      <% if devise_mapping.rememberable? %>
        <div class="row">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div><br>
      <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>

    <h2>登録がお済みでない方</h2>
    <% end %>
    <%= render "member/shared/links" %>
    </div>
  </div>
</div>
