<h1>マイページ</h1>

<btn><span>登録情報</span><%= link_to "編集する", edit_member_member_path(@member.id), class: "btn btn-primary" %></btn>

<btn><<%= link_to "パスワードを変更する",_path(@member.id), class: "btn btn-primary" %></btn>
<table class="table">
  <thead>
    <tr>
      <th>氏名</th>
      <th>カナ</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @member.family_name @member.first_name %></td>
      <td><%= @member.kana_family_name @member.kana_first_name %></td>
      <td><%= @member.postal_code %></td>
      <td><%= @member.address %></td>
      <td><%= @member.telephone_number %></td>
      <td><%= @member.email %></td>
    </tr>
  </tbody>
</table>

