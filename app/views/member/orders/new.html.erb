<h1>注文情報入力</h1>

<h3>支払い方法</h3>
	<%= form_for(@order_new, url:member_orders_confirm_path) do |f| %>
		<label><%= f.radio_button :payment_method, true,{:checked => true} %>クレジットカード</label>
		<label><%= f.radio_button :payment_method, false %>銀行振り込み</label>
	<% end %>

<h3>お届け先</h3>
	<!-- 自身の住所 -->
 	<%= current_member.postage %>
 	<%= current_member.address %>
 	<%= current_member.name %>

<!-- 登録済み住所からの選択 -->
<%= form_for(@address, url: "/shipping_addresses") do |f| %>
    <%= f.collection_select :adress_id, Address.all, :postal_code, :address, :name%>


<!-- 新しいお届け先 -->

  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>

<%= f.submit '確認画面に進む', class: "btn btn-primary" %>
<% end %>
