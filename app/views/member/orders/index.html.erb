<h3>注文履歴一覧</h3>
<div class="row">
    <div class="col-xs-12">

      <table class="table table-bordered">
        <thead>
          <tr>
           <th class="active">注文日</th>
            <th class="active">配送先</th>
            <th class="active">注文商品</th>
            <th class="active">支払金額</th>
            <th class="active">ステータス</th>
            <th class="active">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class = "tyumonrireki"><div class = "a"><%= order.created_at.strftime("%Y/%m/%d") %></div></td>
            <td class = "tyumonrireki"><div class = "a"><%= order.postal_code %><br><%= order.address %><br><%= order.receiver %></div></td>
            <td class = "tyumonrireki"><div class = "a"><% order.order_products.each do |order_product| %>
                <%= order_product.product.name %></div><br>
                <% end %></td>
            <td class = "tyumonrireki"><div class = "a"><%= order.payment_amount %></div></td>
            <td class = "tyumonrireki"><div class = "a"><%= order.order_status %></div></td>
            <td class = "tyumonrireki"><div class = "a"><%= link_to "表示する",member_order_path(order), class: "btn btn-primary" %></div></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>