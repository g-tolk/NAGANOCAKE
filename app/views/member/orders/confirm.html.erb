<h1>注文情報確認</h1>

<%= form_with(model: @order, local: true, url: member_orders_path) do |f| %>

<div class="d-none d-lg-block space">
  <div class="row">
    <div class="col-lg-5"><h4>商品名</h4></div>
    <div class="col-lg-2"><h4>単価（税込）</h4></div>
    <div class="col-lg-2"><h4>数量</h4></div>
    <div class="col-lg-2"><h4>小計</h4></div>
  </div>
</div>

<% sum = 0 %>
<% @cart_products.each do |cart_product| %>
<div class="row space-sm">
  <div class="col-lg-3">
    <%= attachment_image_tag(cart_product.product, :image, :fill, 100, 100) %>
  </div>
  <div class="col-lg-2">
    <%= cart_product.product.name %>
  </div>
  <div class="col-lg-2">
    <%= price_included_tax(cart_product.product.non_taxed_price) %>
  </div>
  <div class="col-lg-2">
    <%= cart_product.quantity %>
  </div>
  <div class="col-lg-2">
  <%= sub_total(cart_product.product.non_taxed_price,cart_product.quantity) %>
  </div>
</div>
<% sum += sub_total(cart_product.product.non_taxed_price,cart_product.quantity) %>
<% end %>


<div class="col-xs-1">
</div>
<div class="table col-xs-5">
<tr>
  	<th>送料</th>
  	<th><%= @postage = postage %></th>
  </tr>
  <tr>
  	<th>商品合計</th>
  	<th><%= sum %></th>
  </tr>
  <tr>
  	<th>請求金額</th>
  	<th><%= @payment_amount = postage + sum %> </th>
  </tr>
</table>
</div>

<h2><strong>支払方法</strong></h2>
	<% if @order.payment_method == true %>クレジットカード
	<% else %>銀行振込
	<% end %>
<h2><strong>お届け先</strong></h2>
	<%= @order.postal_code %>
	<%= @order.address %>
	<%= @order.receiver %>

	<%= f.hidden_field :member_id, :value => current_member.id %>
 	<%= f.hidden_field :postal_code, :value => "#{@order.postal_code}" %>
  	<%= f.hidden_field :address, :value => "#{@order.address}" %>
  	<%= f.hidden_field :receiver, :value => "#{@order.receiver}" %>
  	<%= f.hidden_field :payment_amount, :value => @payment_amount %>
  	<%= f.hidden_field :payment_method, :value => @order.payment_method %>
  	<%= f.hidden_field :postage, :value => @postage %>
  	<%= f.hidden_field :order_status, :value => "waiting_for_payment" %>

<div class="btn">
	<%= f.submit '購入を確定する' ,class: "btn btn-success" %>
</div>

<% end %>
