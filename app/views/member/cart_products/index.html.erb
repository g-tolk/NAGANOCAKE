<h3>ショッピングカート</h3>



<table class="table table-hover">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
        <% @products.each do |product| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag(@product, :image, :fill, 50, 50, fallback: "no-image-mini.jpg")%><%= product.name %></td>
          <td><%= @product.non_taxed_price %></td>
          <td><%= .quantity %></td>
          <td><%= sub_total(@product.non_taxed_price,@cartproduct.quantity) %></td>
          <td><%= link_to "削除する","cart_products/#{product.id}", method: :delete, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
      </table>