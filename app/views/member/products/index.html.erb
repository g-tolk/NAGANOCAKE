<div class="contianer">
  <div class="row">
    <h2>商品一覧</h2>
     <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
        </tr>
      </thead>
        <% @products.each do |product| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag(product, :image, :fill, 50, 50, fallback: "no-image-mini.jpg")%></td>
          <td><%= product.id %></td>
          <td><%= link_to product.name %></td>
          <td><%= product.non_taxed_price %></td>
          <% end %>
        </tr>
      </tbody>
      </table>
  </div>
</div>