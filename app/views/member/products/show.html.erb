<div class="container">
	<div class="row">
		<div class="nav col-xs-6">
				<P>ジャンル検索</P>
					<ul>
						<li><a href="/products">ケーキ</a></li>
						<li><a href="/products">焼き菓子</a></li>
						<li><a href="/products">プリン</a></li>
						<li><a href="/products">キャンディ</a></li>
					</ul>
		</div>

		<div class="product col-xs-6">
				<%= image_tag attachment_url(@product, :image, :fill, 50, 50, fallback: "no-image-mini.jpg"), size:'300x300'%>
				<%= @product.name %>
				<%= @product.introduction %>
				<%= price_included_tax (@product.non_taxed_price) %>(税込)
				<%= form_for(@product_new, url: member_cart_products_path) do |f| %>
					<%= f.hidden_field :product_id, value: @product.id %>
    				<%= f.number_field :quantity, min: 1 %>
  					<%= f.submit "カートに入れる" %>
				<% end %>
		</div>
	</div>
</div>
