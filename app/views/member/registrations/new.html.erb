<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "member/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col-xs-1">名前</div>
  <div class="col-xs-1">(性)</div>
  <div class="col-xs-3"><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></div>
  <div class="col-xs-1">（名）</div>
  <div class="col-xs-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
</div><br>

<div class="row">
  <div class="col-xs-1">フリガナ</div>
  <div class="col-xs-1">(セイ)</div>
  <div class="col-xs-3"><%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %></div>
  <div class="col-xs-1">(メイ)</div>
  <div class="col-xs-3"><%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %></div>
</div><br>

<div class="row">
  <div class="col-xs-2">メールアドレス</div>
  <div class="col-xs-1"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
</div><br>

<div class="row">
  <div class="col-xs-2">郵便番号(ハイフンなし)</div>
  <div class="col-xs-1"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
</div><br>

<div class="row">
  <div class="col-xs-2">住所</div>
  <div class="col-xs-1"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
</div><br>

<div class="row">
  <div class="col-xs-2">電話番号(ハイフンなし)</div>
  <div class="col-xs-1"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
</div><br>

<div class="row">
  <div class="col-xs-2">パスワード(6文字以上)</div>
  <div class="col-xs-2"><%= f.password_field :password, autocomplete: "new-password" %></div>
</div><br>

<div class="row">
  <div class="col-xs-2">パスワード(確認用)</div>
  <div class="col-xs-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
</div><br>

<div class="row">
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success"  %>
  </div>
</div>
<% end %>

<h3>既に登録済みの方</h3>
<%= render "member/shared/links" %><span>からログインしてください。</span>

</div>
