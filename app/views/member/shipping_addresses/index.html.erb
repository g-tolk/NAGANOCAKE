<h3>配送先登録/一覧</h3>

<%= form_for(@address, url: "/shipping_addresses") do |f| %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>

<%= f.submit '登録する', class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
      	<%= link_to "編集する",edit_member_shipping_address_path(address), class: "btn btn-primary" %>
        <%= link_to "削除する","shipping_addresses/#{address.id}", method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>