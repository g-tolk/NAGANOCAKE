<h3>配送先登録/一覧</h3>

<%= form_for(@address) do |f| %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= member.family_name %> <%= member.first_name %>

<btn><%= f.submit '登録する' class: "btn btn-success"　%></btn>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
    <tr>
      <td>%= member.postal_code %></td>
      <td>%= member.address %></td>
      <td><%= member.family_name %><%= member.first_name %></td>
      <td>
      	<%= link_to "編集する",edit_member_shipping_address_path, class: "btn btn-primary" %>
        <%= link_to "削除する",member_shipping_addresses_path(@member), method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>