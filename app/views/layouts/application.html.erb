<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="logo">
      </div>
      <% if member_signed_in? %>
        <nav class="nav1 member-after-login">
          <p>ようこそ、<%= current_member.family_name %>さん！</p>
            <ul>
              <li><%= link_to 'マイページ', member_members_path, class: "col-xs-1 btn btn-default" %></li>
              <li><%= link_to '商品一覧', member_products_path, class: "col-xs-1 btn btn-default" %></li>
              <li><%= link_to 'カート', member_cart_products_path, class: "col-xs-1 btn btn-default" %></li>
              <li><%= link_to 'ログアウト', destroy_member_session_path, method: :delete, class: "col-xs-1 btn btn-default" %></li>
            </ul>
        </nav>
      <% elsif admin_signed_in? %>
        <nav class="nav1 admin-after-login">
          <ul>
             <li><%= link_to '商品一覧', admin_products_path, class: "col-xs-1 btn btn-default" %></li>
              <li><%= link_to '会員一覧', admin_members_path, class: "col-xs-1 btn btn-default" %></li>
              <li><%= link_to '注文履歴一覧', admin_orders_path, class: "col-xs-1 btn btn-default" %></li>
               <li><%= link_to 'ジャンル一覧', admin_genres_path, class: "col-xs-1 btn btn-default" %></li>
              <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "col-xs-1 btn btn-default" %></li>
          </ul>
        </nav>
      <% else %>
        <nav class="nav1 member-before-login">
          <ul>
            <li><%= link_to 'About', member_products_about_path, class: "col-xs-1 btn btn-default" %></li>
            <li><%= link_to '商品一覧', member_products_path, class: "col-xs-1 btn btn-default" %></li>
            <li><%= link_to '新規登録', new_member_registration_path, class: "col-xs-1 btn btn-default" %></li>
            <li><%= link_to 'ログイン', new_member_session_path, class: "col-xs-1 btn btn-default" %></li>
          </ul>
        </nav>
      <% end %>

      <div class="search">
      </div>
    </header>
    <div class="main"style="background-color:#F2F2F2">
      <%= yield %>
    </div>

    <div class="footer">
    </div>

  </body>
</html>
