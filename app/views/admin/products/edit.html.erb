<h1>Admins::Products#edit</h1>
<p>Find me in app/views/admins/products/edit.html.erb</p>

<h2>商品編集</h2>
<%= form_for(@product) do |f| %>

<div class="field">

	<div class="field">
		<%= f.label :image %>
		<%= f.attachment_field :image, class: "image" %>
	</div>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, "商品名" class: "name" %>
	</div>

	<div class="field">
		<%= f.label :introduction %>
		<%= f.text_area :introduction, "商品説明" class: "introduction" %>
	</div>

	<div class="field">
		<%= f.label :genre_id %>
		<%= f.collection_select(:genre_id, @products, :id, :name ) %>
	</div>

	<div class="field">
		<%= f.label :non_taxed_price %>
		<%= f.text_area :non_taxed_price, "税抜価格" class: "non_taxed_price" %>
	</div>

	<div class="field">
	<%= f.label :sale_status, '販売ステータス' %>
    <%= f.select :sale_status, {'販売中': 1, '売切れ': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
	</div>

	<div class="actions">
		<%= f.submit "変更を保存" %>
	</div>