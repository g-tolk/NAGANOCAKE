<div class="container">
  <div class="row">
    <h3>商品詳細</h3>
      <div class="row">
        <%= attachment_image_tag @product, :image,format: 'jpeg', size: "300x200" , class:"img-circle"%>
      </div>
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @product.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格（税抜価格)</th>
          <td><%= price_included_tax (@product.non_taxed_price) %>
          (<%= @product.non_taxed_price%>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><% if @product.sale_status == true %>販売中
              <% else %>売り切れ
              <% end %></td>
        </tr>
      </table>
      <div class="field">
        <%= link_to "編集する", edit_admin_product_path(@product.id),class:"btn btn-primary" %>
      </div>
  </div>
</div>
