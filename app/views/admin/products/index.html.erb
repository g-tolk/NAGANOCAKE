<div class="contianer">
  <div class="row">
    <h2>商品一覧</h2>
     <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @products.each do |product| %>
        <% if product.genre.valid_status == true %>
      <tbody>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name %></td>
          <td><%= product.non_taxed_price %></td>
          <td><%= product.genre.name %></td>
          <td><% if product.sale_status == true %>販売中
          <% else %>
          売切れ
          <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    <% end %>
      </table>
  </div>
</div>
