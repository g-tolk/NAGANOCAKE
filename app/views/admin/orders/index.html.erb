<h1>注文履歴一覧</h1>

<div class="table">
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>
	<tr>
		<% @order_products.each do |order_product| %>
			<td><%= order_product.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
			<td><%= order_product.member.family_name +　product.member.first_name %></td>
			<td><%= order_product.member.orders.count %></td>
			<td><%= order_product.order_status %></td>
		<% end %>
	</tr>

</div>