<div class="container">
  <div class="row">
		<h3>注文履歴一覧</h3>
		<table class="table table-hover">
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
				<% @orders.each do |order| %>
			<tr>
				<td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
				<td><%= order.member.full_name %></td>
				<td><%= order.member.orders.count %></td>
				<td><%= order.order_status_i18n %></td>
			</tr>
				<% end %>
		</table>
  </div>
</div>
