<div class="container">

  <h3>ジャンル一覧・追加</h3>

  <p>ジャンル</p>
  <%= form_for(@genre, url: 'admin_genres') do |f| %>
  <%= f.text_field :name %>
  <label><%= f.radio_button :valid_status, "有効" %>有効</label>
  <label><%= f.radio_button :valid_status, "無効" %>無効</label>
  <%= f.submit '追加' %>

  <% end %>

  <table class="table table-hover">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.valid_status %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(@genre),class:"btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
  </table>

</div>
